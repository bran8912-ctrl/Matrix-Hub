---
import "../../src/styles/globals.css";
import Footer from "./Footer.astro";
import Header from "./Header.astro";
import MatrixRain from "./MatrixRain.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name='impact-site-verification' value='7c857a2b-e958-419c-9417-238f3c42d3dd' />
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-CKWFL856MZ"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-CKWFL856MZ');
    </script>
    <title>{title}</title>
    <link rel="stylesheet" href="/oracle/oracle-secretary.css" />
    <!-- Note: External scripts (Google Analytics, Telegram Widget) are loaded without integrity hashes 
         as they are dynamically updated by their providers. Consider implementing CSP headers for additional security. -->
  </head>
  <body>
    <MatrixRain />
    <Header />
    <main class="w-full max-w-6xl mx-auto px-4 sm:px-8 py-8">
      <slot />
    </main>
    <Footer />
    
    <!-- Oracle Bot Widget -->
    <div id="matrixBotButton" role="button" aria-label="Open Oracle chat" title="Ask the Oracle">◈</div>

    <div id="matrixBotWindow">
      <div id="matrixBotHeader">
        <div class="oracle-header__title">THE ORACLE</div>
        <div class="oracle-header__controls">
          <button id="oracleAppsBtn" class="oracle-header__btn" type="button" title="Apps">APPS</button>
          <button id="oracleVoiceBtn" class="oracle-header__btn" type="button" aria-pressed="false" title="Voice">VOICE</button>
          <select id="oracleVoiceSelect" title="Choose Oracle Voice">
            <option value="default">Default</option>
            <option value="matrix">Matrix</option>
            <option value="cyber">Cyber</option>
            <option value="oracle">Oracle</option>
            <option value="neon">Neon</option>
          </select>
          <button id="oracleCloseBtn" class="oracle-header__btn" type="button" title="Close">×</button>
        </div>
      </div>

      <div id="oracleQuickActions"></div>
      <div id="oracleAppsPanel" hidden></div>
      <div id="matrixBotMessages"></div>

      <div id="matrixBotInputArea">
        <input id="matrixBotInput" type="text" placeholder="Ask the Oracle...">
        <button id="matrixBotSend">➤</button>
      </div>
    </div>

    <div id="oracleMatrixToasts"></div>
    <script type="module" src="/oracle/oracle-secretary.js"></script>
  </body>
</html>
