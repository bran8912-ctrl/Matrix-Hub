---
import Layout from "../components/Layout.astro";
import MTXEcosystem from "../components/MTXEcosystem.astro";
import CasinoGamesPanel from "../components/CasinoGamesPanel.astro";
import DonateBanner from "../components/DonateBanner.astro";
import TelegramWidget from "../components/TelegramWidget.astro";
import MusicPlayer from "../components/MusicPlayer.astro";
import ThemeCustomizer from "../components/ThemeCustomizer.astro";
import DailyDrops from "../components/DailyDrops.astro";
import DealScanner from "../components/DealScanner.astro";

export const prerender = true;
---

<Layout title="The Matrix Hub - Blockchain Tools & Casino">
  <div class="homepage-header">
    <h1 class="matrix-title">THE MATRIX HUB</h1>
    <p class="matrix-subtitle">
      Your gateway to blockchain tools, MTX token ecosystem, and provably fair casino games.
    </p>
  </div>

  <!-- MTX Ecosystem Section -->
  <MTXEcosystem />

  <!-- Casino Games Panel -->
  <CasinoGamesPanel />

  <!-- Daily Drops Bot -->
  <DailyDrops />

  <!-- Deal Scanner -->
  <DealScanner />

  <!-- Donation Banner -->
  <DonateBanner />

  <!-- Telegram Widget -->
  <TelegramWidget />

  <!-- Music Player -->
  <MusicPlayer />

  <!-- Theme Customizer -->
  <ThemeCustomizer />
</Layout>

<style>
  .homepage-header {
    text-align: center;
    margin-bottom: 40px;
  }

  .matrix-title {
    font-size: 2.8rem;
    color: var(--theme-primary);
    text-shadow: 0 0 20px var(--theme-glow);
    font-family: 'Courier New', monospace;
    letter-spacing: 4px;
    margin-bottom: 15px;
    animation: glow-pulse 2s ease-in-out infinite alternate;
  }

  @keyframes glow-pulse {
    from {
      text-shadow: 0 0 10px var(--theme-glow), 0 0 20px var(--theme-glow);
    }
    to {
      text-shadow: 0 0 20px var(--theme-glow), 0 0 40px var(--theme-glow), 0 0 60px var(--theme-glow);
    }
  }

  .matrix-subtitle {
    font-size: 1.2rem;
    color: var(--theme-text);
    text-shadow: 0 0 10px var(--theme-secondary);
    font-family: 'Courier New', monospace;
  }

  @media (max-width: 768px) {
    .matrix-title {
      font-size: 2rem;
      letter-spacing: 2px;
    }

    .matrix-subtitle {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .matrix-title {
      font-size: 1.8rem;
    }

    .matrix-subtitle {
      font-size: 0.9rem;
    }
  }
</style>
